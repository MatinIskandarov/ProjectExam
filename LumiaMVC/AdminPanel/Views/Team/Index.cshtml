@using DataAccess.Models.Teams

@model GetTeamsListModel
@inject IConfiguration _configuration;

<div class="col-10">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3>Special Team</h3>
                <a class="btn btn-primary" asp-action="Create">Create Items</a>
                <h5></h5>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Teams)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img style="width: 150px; height: auto;" src="Img/@item.Img" alt="image" />
                                    </td>
                                    <td>
                                        @item.Fullname
                                    </td>
                                    <td>
                                        @item.Position
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            @if (Model.activePage - 1 > 0)
                            {
                               <li class="page-item"><a class="page-link" asp-route-page="@(Model.activePage-1)">Previous</a></li> 
                            }
                            <li class="page-item"><a class="page-link" asp-route-page="@(Model.activePage)">@(Model.activePage)</a></li> 
                            @if (Model.activePage+1 <= Model.totalPageCount)
                            {
                                <li class="page-item"><a class="page-link" asp-route-page="@(Model.activePage+1)">Next</a></li> 
                            }
                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </div>
</div>
